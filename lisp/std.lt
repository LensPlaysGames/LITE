(defmacro keybind-push (given-alist key value)
  "Define GIVEN-ALIST to an alist with KEY associated to VALUE, no checking for duplicates."
  `(define ,given-alist (alist-set ,given-alist ,key ,value)))

(defmacro keybind-set (given-alist key value)
  "Define GIVEN-ALIST to an alist with KEY associated to VALUE, no duplicates."
  `(define ,given-alist (add-to-alist-impl ,given-alist ,key ,value)))

(defmacro set-bind-in-keymap (key value)
  "Define global keymap to an alist with KEY associated to VALUE, no duplicates."
  `(set keymap (add-to-alist-impl keymap ,key ,value)))

(defun make-simple-keymap ()
  "Create a small keymap with the usual rebinds that are used for modifier keys."
  (let ((simple-keymap nil))
    (keybind-push simple-keymap "LEFT-SUPER"    "SUPR")
    (keybind-push simple-keymap "RIGHT-SUPER"   "SUPR")
    (keybind-push simple-keymap "LEFT-CONTROL"  "CTRL")
    (keybind-push simple-keymap "RIGHT-CONTROL" "CTRL")
    (keybind-push simple-keymap "LEFT-ALT"      "ALTS")
    (keybind-push simple-keymap "RIGHT-ALT"     "ALTS")
    (keybind-push simple-keymap "LEFT-SHIFT"    "SHFT")
    (keybind-push simple-keymap "RIGHT-SHIFT"   "SHFT")
    simple-keymap))

(defmacro get-keymap-or-make-simple (keymap keystring)
  "Get keymap within KEYMAP at KEYSTRING, or make a simple keymap if it doesn't already exist."
  `(let ((keymap-at-keystring (alist-get ,keymap ,keystring)))
    (if keymap-at-keystring keymap-at-keystring (make-simple-keymap))))

